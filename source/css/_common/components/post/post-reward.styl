.reward-container {
  position: relative;
  padding: 0;
  margin: 20px auto;
  width: 90%;
  text-align: center;
}

.reward-box {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 2.5rem;
  margin: 0 auto;
  width: 20rem;
  border-radius: .5rem;
  box-shadow: 0 0 .3rem #111;
  background-color: #fff;
  display: none;
}

.reward-image {
  border-radius: .5rem;
}

.reward-group {
  width: fit-content;
  margin: 0 auto;
  border-radius: 5rem;
  box-shadow: inset 0 0 0 1px #eee;
  height: 2rem;
  font-size: 1rem
}

.reward-button {
  position: relative;
  margin: 0;
  padding: 0 1rem;
  border: 0;
  height: 2rem;
  line-height: 2rem;
  display: inline-block;
  color: $color-11;

  &:after {
    position: absolute;
    left: 0;
    top: 25%;
    display: inline-block;
    height: 1rem;
    width:1px;
    background-color: #eee;
    content: '';
  }
}

.reward-button:first-child {
  padding-left: 1.3rem;
  &:after {
    width:0;
  }
}
.reward-button:last-child {
  padding-right: 1.3rem;
}

