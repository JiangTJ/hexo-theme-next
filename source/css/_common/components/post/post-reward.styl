#reward-container {
  padding: 10px 0;
  margin: 20px auto;
  width: 90%;
  text-align: center;
}

.reward-group {
  width: fit-content;
  margin: 0 auto;
  border-radius: 5rem;
  box-shadow: inset 0 0 0 1px #eee;
  height: $font-size-large * 2;
}

.reward-button {
  //cursor: pointer;
  //outline: 0;
  //background: $color-1;
  //vertical-align: text-top;
  //font-size: $font-size-large;
  margin: 0;
  padding: 0 10px;
  border: 0;
  border-left: 1px solid #eee; 
  height: $font-size-large * 2;
  line-height: $font-size-large * 2;
  //width: $font-size-large * 2;
  display: inline-block;
  color: $color-11;
  letter-spacing: normal;
  text-transform: none;
  text-indent: 0px;
  text-shadow: none;

  // &:after {
  //   display: inline-block;
  //   height: $font-size-large;
  //   width:1px;
  //   background-color: #eee;
  //   content: '';
  // }
}

.reward-button:first-child {
  padding-left: 10px;
}
.reward-button:last-child {
  padding-right: 10px;
}

#reward-button span:hover {
  background: #F7877F;
}

#qr {
  padding-top: 20px;

  a {
    border: 0;
  }

  img {
    width: 180px;
    max-width: 100%;
    display: inline-block;
    margin: 0.8em 2em 0 2em;
  }

  p {
    text-align: center;
  }

  if hexo-config('reward_settings.animation') {
    & > div:hover p {
      animation: roll 0.1s infinite linear;
    }

    @keyframes roll {
      from {
        transform: rotateZ(30deg);
      }
      to {
        transform: rotateZ(-30deg);
      }
    }
  }
}
